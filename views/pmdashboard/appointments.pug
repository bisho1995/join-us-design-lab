extends ../shared/layout  
block content
    h1 Appointments

    if response.isAppointment == false
        b No appointments today
    else
        ul
            for appointment in response.appointments
                li  
                    p 
                        | Appointment starts at  
                        b #{appointment.start} 
                        span(class="link") 
                            | <button class="btn btn-success" data-urlMeeting="#{appointment.link}">Chat</button> &nbsp;
                        <button class="btn btn-primary notes" data-client_id="#{appointment.client_id}"> Take notes</button>

    script
        include ../assets/js/pmAppointments.js

